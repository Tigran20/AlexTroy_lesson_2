<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaffff00"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/to_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open red activity" />

    <Button
        android:id="@+id/send_to_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send some text to blue Activity" />

    <Button
        android:id="@+id/get_from_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get some info from Green Activity" />
</LinearLayout>
